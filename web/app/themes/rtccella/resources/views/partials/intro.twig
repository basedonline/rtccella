{% if intro %}
    <section class="intro alignfull">
        <div class="intro__inner">
            <div class="intro__pusher"></div>
            <div class="intro__shapes-top">
                <div class="intro__blue intro__shape"></div>
                <div class="intro__orange intro__shape"></div>
            </div>
            <div class="intro__content">
                <div class="container">
                    {% if intro.subtitle %}
                        <span class="intro__subtitle">{{ intro.subtitle }}</span>
                    {% endif %}
                    <h1 class="intro__title">
                        {{ intro.title }}
                    </h1>
                    {% if intro.text %}
                        {{ intro.text }}
                    {% endif %}
                    {% if search %}
                        {% include 'components/custom-search.twig' with {
                            engine: 'jobs'
                        } %}
                    {% endif %}
                    {% if intro.jobmeta %}
                        <div class="intro__meta">
                            {% include 'components/job-meta.twig' with {
                                class: 'intro__metaitem'
                            } %}
                        </div>
                    {% endif %}
                </div>
            </div>
            <div class="intro__footer">
                <div class="intro__light-blue intro__shape"></div>
            </div>
        </div>
    </section>
{% endif %}
